	note = {Publisher: Frontiers},
	keywords = {connectomics, binary expression systems, cell type, genetic models, Intersectional Targeting},
	file = {Luan et al 2020 The Drosophila Split Gal4 System for Neural Circuit Mapping.pdf:/home/buchsbaum/Documents/papers/renamed/Luan et al 2020 The Drosophila Split Gal4 System for Neural Circuit Mapping.pdf:application/pdf},
}

