	keywords = {Neural circuits, Motor control},
	file = {Braun et al 2024 Descending networks transform command signals into population motor control.pdf:/home/buchsbaum/Documents/papers/renamed/Braun et al 2024 Descending networks transform command signals into population motor control.pdf:application/pdf},
