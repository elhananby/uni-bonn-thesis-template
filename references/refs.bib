@article{cellini_hybrid_2020,
	title = {Hybrid visual control in fly flight: insights into gaze shift via saccades},
	volume = {42},
	issn = {2214-5745},
	url = {https://www.sciencedirect.com/science/article/pii/S2214574520301085},
