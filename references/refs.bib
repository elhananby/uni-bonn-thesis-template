	date = {2018-04-23},
	keywords = {auditory, chordotonal, hearing, phase, selectivity, sound, vibration, {WED}},
	file = {Patella_Wilson 2018 Functional Maps of Mechanosensory Features in the iDrosophila-i Brain.pdf:/home/buchsbaum/Documents/papers/renamed/Patella_Wilson 2018 Functional Maps of Mechanosensory Features in the iDrosophila-i Brain.pdf:application/pdf;ScienceDirect Snapshot:/home/buchsbaum/Zotero/storage/U26Y2INX/S0960982218302963.html:text/html},
