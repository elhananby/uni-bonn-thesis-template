	date = {2014-04},
	note = {Publisher: Proceedings of the National Academy of Sciences},
	file = {Fuller et al 2014 Flying Drosophila stabilize their vision-based velocity controller by sensing.pdf:/home/buchsbaum/Documents/papers/renamed/Fuller et al 2014 Flying Drosophila stabilize their vision-based velocity controller by sensing.pdf:application/pdf},
